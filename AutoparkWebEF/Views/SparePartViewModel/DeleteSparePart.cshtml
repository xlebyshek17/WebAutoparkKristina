@model AutoparkWebEF.Models.SparePartViewModel
@{
    ViewData["Title"] = "Delete detail";
}
<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>
            @Model.Id
        </dd>

        <dt>Detail Name</dt>
        <dd>
            @Model.Name
        </dd>
    </dl>

    <div>
        <form asp-controller="SparePartViewModel" asp-action="DeleteSparePart" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-outline-info" value="Delete" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info" role="button" asp-controller="SparePartViewModel" asp-action="ViewSpareParts">Back to list of SpareParts</a>
</div>
